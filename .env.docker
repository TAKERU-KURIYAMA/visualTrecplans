# Docker環境用設定
# データベース設定
POSTGRES_USER=trecplans
POSTGRES_PASSWORD=password
POSTGRES_DB=trecplans_dev

# Adminer設定
ADMINER_DEFAULT_SERVER=postgres
ADMINER_DESIGN=nette

# アプリケーション設定
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true

# データベース接続（アプリケーション用）
DB_HOST=postgres
DB_PORT=5432
DB_USER=trecplans
DB_PASSWORD=password
DB_NAME=trecplans_dev
DB_SSLMODE=disable

# JWT設定
JWT_SECRET=docker-dev-secret-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# CORS設定
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ログ設定
LOG_LEVEL=debug
LOG_FORMAT=console